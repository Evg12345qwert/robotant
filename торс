class Торс:
  def __init__(self):
    self.суставы = Суставы()
    self.датчики = ДатчикиТорса()
    self.приводы = ПриводыТорса()
    self.ии = ИскусственныйИнтеллект()

  def наклониться(self, угол):
    self.ии.спланировать_наклон(угол)
    self.суставы.сдвинуть_суставы(self.ии.команды)

  def повернуться(self, угол):
    self.ии.спланировать_поворот(угол)
    self.суставы.сдвинуть_суставы(self.ии.команды)
