class Нога:
  def __init__(self):
    self.суставы = Суставы()
    self.датчики = ДатчикиНоги()
    self.приводы = ПриводыНоги()
    self.ии = ИскусственныйИнтеллект()

  def шагнуть(self, цель):
    self.ии.спланировать_шаг(self.датчики.данные, цель)
    self.суставы.сдвинуть_суставы(self.ии.команды)
    self.датчики.ощутить_опору()

  def идти(self, цель):
    while True:
      self.шагнуть(цель)
      # Обновить цель и датчики
      pass

  def повернуться(self, угол):
    self.ии.спланировать_поворот(угол)
    self.суставы.сдвинуть_суставы(self.ии.команды)
