class Рука:
  def __init__(self):
    self.суставы = Суставы()
    self.датчики = ДатчикиРуки()
    self.приводы = ПриводыРуки()
    self.ии = ИскусственныйИнтеллект()

  def схватить_объект(self, объект):
    self.датчики.определить_положение(объект)
    self.ии.спланировать_схват(self.датчики.данные)
    self.суставы.сдвинуть_суставы(self.ии.команды)
    self.датчики.ощутить_схват(объект)

  def манипулировать_объектом(self, объект):
    self.датчики.определить_положение(объект)
    self.ии.спланировать_манипуляцию(self.датчики.данные)
    self.суставы.сдвинуть_суставы(self.ии.команды)
    self.датчики.ощутить_объект(объект)

  def отпустить_объект(self):
    self.суставы.расслабить_суставы()
